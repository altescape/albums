<% provide(:html_class, 'title-screen') %>
<% provide(:body_class, 'title-screen') %>
<% provide(:title, 'Your Top 5 Albums Of All Time') %>

<div class="background noselect"><ul></ul></div>

<div class="parallax hidden">
  <div class="parallax__layer parallax__layer__0"><img src="http://www.firewatchgame.com/img/parallax0.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__1"><img src="http://www.firewatchgame.com/img/parallax1.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__2" style="opacity: 0.5"><img src="http://www.firewatchgame.com/img/parallax0.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__3"><img src="http://www.firewatchgame.com/img/parallax2.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__4"><img src="http://www.firewatchgame.com/img/parallax3.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__5"><img src="http://www.firewatchgame.com/img/parallax4.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__6"><img src="http://www.firewatchgame.com/img/parallax5.png" alt="" /></div>
  <div class="parallax__layer parallax__layer__7"><img src="http://www.firewatchgame.com/img/parallax6.png" alt="" /></div>
  <div class="parallax__cover"></div>
</div>

<div class="container text-center noselect">
  <div class="box">
    <div class="single-column">
      <h1 class="brand"><span>TOP</span> <span>5</span> <span>ALBUMS</span></h1>
      <% if logged_in? %>
          <p class="brand-action"><%= link_to 'ENTER', your_top_5_path, class: "btn btn-default btn-lg" %></p>
      <% else %>
          <p class="brand-action"><%= link_to 'ENTER', :register, class: "btn btn-default btn-lg" %></p>
      <% end %>
    </div>
  </div>
</div>

