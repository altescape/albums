<div class="container">
  <div class="box">
    <div class="text-center">

      <h1>Your top 5 Albums</h1>

      <hr>

      <%= render 'albums' %>

      <hr>

      <table>
        <thead>
        <tr>
          <th>User</th>
          <th>name</th>
          <th>albums</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @album_collections.each do |album_collection| %>
            <tr>
              <td><%= album_collection.user %></td>
              <td><%= album_collection.name %></td>
              <td><%= album_collection.albums %></td>
              <td><%= link_to 'Show', album_collection %></td>
              <td><%= link_to 'Edit', edit_album_collection_path(album_collection) %></td>
              <td><%= link_to 'Destroy', album_collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <hr>

      <%= link_to 'New Album collection', new_album_collection_path %>

    </div>
  </div>
</div>