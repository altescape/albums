<%= form_for :session, url: login_path, :html => {:class => "form-signin text-center"} do |f| %>
    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "form-control", placeholder: "Email", type: "email" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>

    <% flash.each do |key, value| %>
        <%= content_tag :div, value, class: "flash alert alert-#{key} text-center" %>
    <% end %>

    <%= f.submit "Log in", class: "btn btn-lg btn-primary" %>
<% end %>