<% provide(:html_class, 'search') %>
<% provide(:title, 'Search for an album') %>

<div class="container">
  <div class="box">

    <div class="row text-center">
      <h1 class="page-heading">Search for albums</h1>

      <%= render 'form' %>

    </div>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <div class="report"></div>
        <hr>
        <div class="results"></div>
        <p class="text-center text-muted">Search provided by <%= image_tag 'spotify.png', width: '90px' %></p>
      </div>
    </div>

  </div>

</div>