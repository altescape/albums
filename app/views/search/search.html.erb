<div class="container">
  <div class="box">

    <div class="row text-center">
      <h1 class="page-heading">Search for albums</h1>

      <form class="form-horizontal" action="" method="get" name="search">
        <div class="col-md-6 col-md-offset-3">
          <div class="form-group">
            <div class="col-sm-8">
              <input type="text" class="form-control input-lg" id="inputSearch" placeholder="<%= @search.get_placeholder %>" name="s">
            </div>
            <div class="col-sm-4">
              <button type="submit" class="btn btn-primary btn-block btn-lg">Search</button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <p class="h4 text-center"><%= @albums.count %> albums found</p>
        <hr>
        <%= render 'search_result_spotify' %>
      </div>
    </div>

  </div>

</div>